[core]
	editor = emacsclient -a emacs24
	excludesfile = ~/.gitignore-global
[user]
	name = Juan Pedro Bol√≠var Puente
	email = raskolnikov@gnu.org
	signingkey = 529BA962690A70B1
[push]
	default = simple
[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	cp = cheery-pick
        lol = log --graph --decorate --pretty=oneline --abbrev-commit
        lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
[gui]
	fontdiff = -family Iosevka -size 18 -weight normal -slant roman -underline 0 -overstrike 0
	gcwarning = false
[credential]
	helper = cache --timeout=360000
[branch]
	autosetupmerge = true
[pull]
	rebase = true
[magit]
	hideCampaign = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

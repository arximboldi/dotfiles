(defun @load-fira-code-symbol ()
  (when (member "Fira Code Symbol" (font-family-list))
    (set-fontset-font t '(#Xe100 . #Xe16f) "Fira Code Symbol")))

(defun @setup-fira-code-symbol ()
  (interactive)
  (when (member "Fira Code Symbol" (font-family-list))
    (font-lock-add-keywords nil @fira-code-font-lock-keywords-alist)))

(@load-fira-code-symbol)

(add-hook 'prog-mode-hook #'@setup-fira-code-symbol)
(add-hook 'text-mode-hook #'@setup-fira-code-symbol)
(add-hook 'c-mode-common-hook #'@setup-fira-code-symbol)
(add-hook 'after-make-frame-functions
          (lambda (frame) (@load-fira-code-symbol)))

